{
    "root": true,
    "env": {
        "es2024": true,
        "node": true
    },
    "extends": [
        "with-tsconfig",
        "plugin:perfectionist/recommended-natural",
        "plugin:jsdoc/recommended-typescript",
        "plugin:eslint-plugin/all",
        "plugin:filenames-simple/recommended"
    ],
    "plugins": ["filenames-simple"],
    "rules": {
        "no-console": [
            "warn",
            {
                "allow": ["warn", "error"]
            }
        ],
        "max-len": "off",
        "array-callback-return": "off",
        "newline-before-return": "warn",
        "jsdoc/require-jsdoc": "off",
        "jsdoc/require-returns": "off",
        "jsdoc/require-param-description": "off",
        "@typescript-eslint/no-redeclare": "off",
        "@typescript-eslint/no-unused-expressions": "warn",
        "@typescript-eslint/no-floating-promises": "off",
        "@typescript-eslint/no-confusing-void-expression": "off",
        "@typescript-eslint/prefer-readonly": "error",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "args": "all",
                "varsIgnorePattern": "^_",
                "destructuredArrayIgnorePattern": "^_"
            }
        ],
        "unicorn/no-array-method-this-argument": "off",
        "eslint-plugin/require-meta-docs-url": "off",
        "perfectionist/sort-named-imports": "off",
        "perfectionist/sort-imports": "off",
        "perfectionist/sort-exports": "off",
        "perfectionist/sort-union-types": [
            "warn",
            {
                "order": "asc",
                "type": "natural"
            }
        ],
        "perfectionist/sort-objects": [
            "warn",
            {
                "always-on-top": ["id", "name", "key", "kind", "meta", "type", "title", "description"],
                "order": "asc",
                "type": "natural"
            }
        ],
        "regexp/no-unused-capturing-group": "off",
        "regexp/prefer-named-capture-group": "off",
        "simple-import-sort/exports": "warn",
        "simple-import-sort/imports": "warn",
        "no-multiple-empty-lines": ["error", { "max": 2, "maxBOF": 1 }],
        "import-access/jsdoc": ["error"],
        "filenames-simple/named-export": "off",
        "no-restricted-syntax": [
            "error",
            {
                "selector": "IfStatement[alternate]",
                "message": "If statements with an else branch are not allowed."
            }
        ]
    },
    "overrides": [
        {
            "files": "./src/rules/**/*.ts",
            "rules": {
                "perfectionist/sort-objects": [
                    "warn",
                    {
                        "always-on-top": [
                            "id",
                            "name",
                            "key",
                            "kind",
                            "meta",
                            "type",
                            "docs",
                            "schema",
                            "message",
                            "title",
                            "description",
                            "defaultOptions"
                        ],
                        "order": "asc",
                        "type": "natural"
                    }
                ]
            }
        },
        {
            "files": "*.spec.ts",
            "extends": ["plugin:vitest/all"],
            "plugins": ["vitest"],
            "rules": {
                "perfectionist/sort-objects": "off",
                "sonarjs/no-duplicate-string": "off",
                "vitest/require-hook": "off",
                "vitest/consistent-test-filename": "off"
            }
        },
        {
            "files": ["./scripts/**/*.ts"],
            "rules": {
                "no-await-in-loop": "off"
            }
        }
    ]
}
