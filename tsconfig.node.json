{
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ESNext"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "types": ["@types/node"]
    },
    "include": ["scripts/**/*.ts"]
}
