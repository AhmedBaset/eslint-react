{
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2022",
        "lib": ["ES2022", "ESNext"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "types": ["@types/node"],
        "noEmit": true,
        "strict": true
    },
    "include": ["scripts/**/*.ts"]
}
